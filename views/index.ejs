<%- include header %>
<div class="index-img"></div>
<div class="container main" id="main">
  <div class="row">
    <div class="col-sm-8 main-left">
      <div class="panel panel-success">
    <div class="panel-heading list-group-item">新鲜出手<span class="badge"><%= tenposts.length %></span></div>
    <ul class="list-group" xmlns="http://www.w3.org/1999/html">
    <%
      if(tenposts){
              tenposts.forEach(function (tenposts, index){ %>

      <li class="list-group-item">
        <span class="glyphicon glyphicon-user"> <a href="/u/<%= tenposts.name %>"><%= tenposts.name %></a></span>
        <span class="interval">|</span>
        <span><a href="/u/<%= tenposts.name %>/<%= tenposts.time.day %>/<%= tenposts.title %>"><%= tenposts.title %></a></span>
      </li>

    <%
    })
    }
    %>
    </ul>
    </div>
    </div>
    <div class="col-sm-4 main-right">
    <div class="main-right-function">
      <div class="main-right-h">功能</div>
      <nav class="function-nav">
        <ol>
          <li>
            <form action="/search" method="get">
              <div class="input-group">
                <input type="text" class="form-control" name="keyword" placeholder="查找文章" aria-describedby="basic-addon1"/>
                <span class="input-group-addon" id="basic-addon1">@</span>
              </div>
            </form>
          </li>
          <li><a title="主页" href="/">主页</a> </li>
          <li><a title="存档" href="/archive">文章归档</a> </li>
          <% if (user) { %>
          <li><a title="发表" href="/post">发表文章</a> </li>
          <li><a title="上传" href="/upload">上传文件</a> </li>
          <li><a title="登出" href="/logout">登出系统</a> </li>
          <% } %>
        </ol>
      </nav>
    </div>
</div>
  </div>
</div>
<%- include footer %>